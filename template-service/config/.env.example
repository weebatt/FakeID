# Path to config file
CONFIG_PATH=./config/.env

# Application environment: dev, staging, production
ENV=dev

# HTTP server
HOST=localhost
PORT=8081
MAX_RETRIES=5
RETRY_DELAY=5

# PostgreSQL settings
PG_HOST=localhost
PG_PORT=5432
PG_USER=your_db_user
PG_PASSWORD=your_db_password
PG_DBNAME=your_database_name
PG_SSLMODE=disable
PG_MAX_CONNS=50
PG_MIN_CONNS=10
PG_TIMEOUT=5
PG_MAX_RETRIES=5
PG_RETRY_DELAY=3

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TIMEOUT=5
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=3
